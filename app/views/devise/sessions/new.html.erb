
 
<div class="login-wrap">
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">로그인</label>
		<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">회원가입</label>
		
    <div class="login-form">
		
    	<div class="sign-in-htm">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="group">
            <div class="field">
              <%= f.label :이메일 %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input"%>
            </div>
          </div>

          <div class="group">
            <div class="field">
              <%= f.label :비밀번호, class: "label"  %><br />
              <%= f.password_field :password, autocomplete: "off", class: "input" %>
            </div>
          </div>

          <div class="field">
            <% if devise_mapping.rememberable? -%>
              <div class="group">
                <input id="check" type="checkbox" class="check" checked>
                <label for="check"><span class="icon"></span> Keep me Signed in</label>
              </div>
            <% end %>
          </div>

          <div class="field">
            <div class="actions">
              <div class="group">
                  <%= f.submit "로그인", class: "button" %>
              </div>
            </div>
          </div>
        <% end  %>
          <div class="hr"></div>
          <div class="foot-lnk">
            <a href="#forgot">Forgot Password?</a>
          </div>
        
      </div>


      <div class="sign-up-htm">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="field">
            <div class="group">
              <%= f.label :"이름" %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="group">
              <%= f.label :"이메일" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "input"%>
            </div>
          </div>

          <div class="field">
            <div class="group">
              <%= f.label :"비밀번호" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="group">
              <%= f.label :"비밀번호 확인" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" , class: "input", data_type: "password"%>
            </div>
          </div>

          <div class="actions">
            <div class="group">
              <%= f.submit "회원가입", class: "button"%>
            </div>
          </div>
          <% end %>

          <div class="hr"></div>
          <div class="foot-lnk">
            <label for="tab-1">Already Member?</a>
          </div>
      </div>

    
    </div> 
  </div>
</div> 

